{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "coverctl config",
  "type": "object",
  "properties": {
    "version": {
      "type": "integer",
      "minimum": 1
    },
    "policy": {
      "type": "object",
      "properties": {
        "default": {
          "type": "object",
          "properties": {
            "min": {"type": "number"}
          },
          "required": ["min"]
        },
        "domains": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": {"type": "string"},
              "match": {"type": "array", "items": {"type": "string"}},
              "min": {"type": "number"}
            },
            "required": ["name", "match"]
          }
        }
      },
      "required": ["default", "domains"]
    },
    "files": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "match": {"type": "array", "items": {"type": "string"}},
          "min": {"type": "number"}
        },
        "required": ["match", "min"]
      }
    },
    "diff": {
      "type": "object",
      "properties": {
        "enabled": {"type": "boolean"},
        "base": {"type": "string"}
      }
    },
    "merge": {
      "type": "object",
      "properties": {
        "profiles": {"type": "array", "items": {"type": "string"}}
      }
    },
    "integration": {
      "type": "object",
      "properties": {
        "enabled": {"type": "boolean"},
        "packages": {"type": "array", "items": {"type": "string"}},
        "run_args": {"type": "array", "items": {"type": "string"}},
        "cover_dir": {"type": "string"},
        "profile": {"type": "string"}
      }
    },
    "annotations": {
      "type": "object",
      "properties": {
        "enabled": {"type": "boolean"}
      }
    },
    "exclude": {
      "type": "array",
      "items": {"type": "string"}
    }
  },
  "required": ["version", "policy"]
}
