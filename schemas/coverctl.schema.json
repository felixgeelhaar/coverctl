{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "coverctl config",
  "type": "object",
  "properties": {
    "version": {
      "type": "integer",
      "minimum": 1
    },
    "policy": {
      "type": "object",
      "properties": {
        "default": {
          "type": "object",
          "properties": {
            "min": {"type": "number"}
          },
          "required": ["min"]
        },
        "domains": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": {"type": "string"},
              "match": {"type": "array", "items": {"type": "string"}},
              "min": {"type": "number"}
            },
            "required": ["name", "match"]
          }
        }
      },
      "required": ["default", "domains"]
    },
    "exclude": {
      "type": "array",
      "items": {"type": "string"}
    }
  },
  "required": ["version", "policy"]
}
